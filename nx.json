{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "simple-site",
  "useDaemonProcess": false,
  "defaultBase": "main",
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["default", "^default"],
      "cache": true
    },
    "lint": {
      "inputs": ["default", "^default"],
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["interfaces:build"],
      "inputs": ["default", "^default"],
      "cache": true
    }
  },
  "projects": {
    "web": "apps/web",
    "functions": "apps/functions",
    "interfaces": "libs/interfaces"
  }
}
